<h1>Books</h1>

<% @books.each do |book| %>

  <p>タイトル</p>
  <span><%= book.title %></span>
  <%= link_to "詳細", book_path(book.id) %>
  <%= link_to "編集", edit_book_path(book.id) %>
  <%= link_to "削除", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
